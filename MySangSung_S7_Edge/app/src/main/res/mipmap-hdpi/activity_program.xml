<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Program">
    <TextView
        android:id="@+id/textView2"
        android:layout_width="387dp"
        android:layout_height="54dp"
        android:fontFamily="sans-serif-light"
        android:text="Các Tính Năng Phần Mềm"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textColor="#EC0606"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imgpheptoan"
        android:layout_width="334dp"
        android:layout_height="128dp"
        android:layout_marginTop="296dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ptb1" />

    <TextView
        android:id="@+id/ax"
        android:layout_width="365dp"
        android:layout_height="138dp"
        android:layout_marginTop="132dp"
        android:background="#72B4E8"
        android:text="Ax + B = 0"
        android:textAlignment="center"
        android:textSize="70sp"
        android:textStyle="bold|italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imgptb1"
        android:layout_width="237dp"
        android:layout_height="166dp"
        android:layout_marginTop="524dp"
        android:layout_marginEnd="80dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ptb2" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="297dp"
        android:layout_height="40dp"
        android:layout_marginTop="464dp"
        android:text="By: Ma Nguyen Nhat Tan"
        android:textAlignment="center"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>