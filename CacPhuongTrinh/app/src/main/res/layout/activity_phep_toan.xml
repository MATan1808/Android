        android:id="@+id/btndu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="34dp"
        android:layout_marginTop="460dp"
        android:background="#5E1616"
        android:onClick="phepdu"
        android:text="Chia Dư"
