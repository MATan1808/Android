        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnthoat1"
        android:layout_width="132dp"
        android:layout_height="37dp"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="132dp"
        android:background="#E31414"
        android:backgroundTint="#E30D0D"
        android:text="Thoát"
        android:textAlignment="center"
        android:textColor="#090909"
        app:icon="@android:drawable/btn_dialog"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="231dp"
        android:layout_height="40dp"
        android:fontFamily="sans-serif-medium"
        android:text="By:Ma Nguyễn Nhật Tân"
        android:textAlignment="center"
        android:textColor="#E30B0B"
        android:textSize="16sp"
        android:textStyle="bold|italic"
        android:typeface="normal"
        tools:layout_editor_absoluteX="87dp"
        tools:layout_editor_absoluteY="685dp" />
</androidx.constraintlayout.widget.ConstraintLayout>